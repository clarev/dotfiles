#!/bin/bash

# Updates all development dependencies

sudo -p "Enter your password: " echo "We're good to go!"
if [ $? -ne 0 ]; then exit 1; fi
echo ""

# rename current tmux window
tmux rename-window 'update'

# ensure most recent crontab is being used
echo "\033[0;34mEnsuring cron job installation...\033[0m"
/usr/bin/crontab ~/.dots/cron/tab
/usr/bin/crontab -l

# rehashing rbenv
echo "\n\033[0;34mRehashing rbenv binaries...\033[0m\n"
rm -f $HOME/.rbenv/shims/.rbenv-shim
rbenv rehash

# update Oh My Zsh
/usr/bin/env ZSH=$ZSH /bin/sh $ZSH/tools/upgrade.sh
echo "LAST_EPOCH=$(($(date +%s) / 60 / 60 / 24))" > ~/.zsh-update

# update and upgrade Homebrew
echo -e '\n\033[0;34mUpdating Brew and any outdated packages...\033[0m'
brew update; brew upgrade --all; brew cleanup -s; brew cask cleanup

# update VIM plugins
echo "\n\033[0;34mUpdating vim plugins...\033[0m"
bash $DOTS/install/vim.sh
